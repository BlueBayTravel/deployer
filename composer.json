{
    "name": "rebelinblue/deployer",
    "description": "Simple deployment management for PHP projects.",
    "minimum-stability": "stable",
    "type": "project",
    "keywords": ["php", "deployer", "deploy", "deployment"],
    "homepage": "http://deployer.rebelinblue.com/",
    "license": "BSD-2-Clause",
    "authors": [
        {
            "name": "Stephen Ball",
            "email": "stephen@rebelinblue.com",
            "homepage": "http://www.rebelinblue.com",
            "role": "Developer"
        }
    ],
    "support": {
        "email" : "deployer@stephen.rebelinblue.com",
        "issues": "https://github.com/REBELinBLUE/deployer/issues",
        "source": "https://github.com/REBELinBLUE/deployer"
    },
    "require": {
        "laravel/framework": "5.1.*",
        "predis/predis": "~1.0",
        "graham-campbell/htmlmin": "~3.0",
        "pda/pheanstalk": "~3.0",
        "creativeorange/gravatar": "~1.0",
        "filp/whoops": "~1.0",
        "barryvdh/laravel-debugbar": "~2.0",
        "nategood/httpful": "~0.2.19",
        "robclancy/presenter": "1.3.*",
        "bugsnag/bugsnag-laravel": "1.*",
        "league/oauth1-client": "^1.5",
        "league/oauth2-client": "^0.12.0",
        "guzzlehttp/oauth-subscriber": "^0.2.0",
        "commerceguys/guzzle-oauth2-plugin": "~2.0"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.5",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~4.0",
        "phpspec/phpspec": "~2.1",
        "doctrine/dbal": "~2.5"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "post-create-project-cmd": [
            "php -r \"copy('.env.example', '.env');\"",
            "php artisan key:generate"
        ]
    },
    "config": {
        "preferred-install": "dist"
    }
}
